script/source = "extends Node2D  # change to `extends AnimatableBody2D` if you prefer

@export var add_to_moving_group: bool = true

var _last_pos: Vector2
var _platform_velocity: Vector2 = Vector2.ZERO

func _ready() -> void:
	_last_pos = global_position
	if add_to_moving_group:
		add_to_group(\"moving_platform\")

func _physics_process(delta: float) -> void:
	if delta <= 0.0:
		return
	# velocity = change in global position per second
	_platform_velocity = (global_position - _last_pos) / delta
	_last_pos = global_position

func get_platform_velocity() -> Vector2:
	return _platform_velocity

# Optional helper if you only want horizontal velocity:
func get_platform_velocity_x() -> float:
	return _platform_velocity.x
"

